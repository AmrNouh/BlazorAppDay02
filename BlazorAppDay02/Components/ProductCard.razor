@inject IAccountRepository AccountService
@inject ILocalStorageService _localStorageService;

@if (Product is not null)
{
    <div class="flex-grow-1 flex-shrink-1 flex-fill col-lg-2 col-md-3 col-sm-12 m-2 py-2 bg-white px-0" style="width:20%;border-radius:0.25rem;">
        <div class="card-img-top">
            <a href="/ProductDetails/@Product.Id" class="w-100 h-100">
                <img src="@Product.Image" class="img img-fluid product-image " />
            </a>
        </div>
        <div class="card-body">
            <a href="/ProductDetails/@Product.Id" class="row text-decoration-none">
                <p class="text-black fs-6 text-center fw-bold">@Product.Name</p>
            </a>
            <a href="" class="d-block text-decoration-none text-center mb-2">
                <p class="card-subtitle">@Product.CategoryName</p>
            </a>
            <h6 class="d-block mb-2 card-text text-center">
                <s class="text-black-50">$61.99</s><strong class="ms-2 text-danger">$@Product.Price</strong>
            </h6>
        </div>
        @if (user is not null)
        {
            <div class="w-100 btn-group-vertical px-3">
                <a class="btn btn-outline-primary" href="/Product/@Product.Id">Edit</a>
                <button class="btn btn-outline-danger" @onclick="DeleteProduct">Delete</button>
            </div>
        }

    </div>
}
